<Page
    x:Class="OOP_Labs_UWP.LabPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OOP_Labs_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<Image Source="Assets/colorBoom.jpg" Stretch="UniformToFill"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="Man" Grid.Column="0" Content="Человек" Style="{StaticResource buttonStyle}" 
					VerticalAlignment="Top" Height="35"/>
			<Button x:Name="School" Grid.Column="1" Content="Школьник" Style="{StaticResource buttonStyle}" 
					VerticalAlignment="Top" Height="35"/>
			<Button x:Name="Student" Grid.Column="2" Content="Студент" Style="{StaticResource buttonStyle}" 
					VerticalAlignment="Top" Height="35"/>
			<Button x:Name="Zaoch" Grid.Column="3" Content="Заочник" Style="{StaticResource buttonStyle}" 
					VerticalAlignment="Top" Height="35" BorderThickness="0 0 0 1"/>
		</Grid>
		
	</Grid>
</Page>
